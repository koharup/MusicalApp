<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.musicalapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.musicalapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_history"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_qr"
        android:name="com.example.musicalapp.ui.qr.QrFragment"
        android:label="@string/title_qr"
        tools:layout="@layout/fragmen_qr"/>

    <fragment
        android:id="@+id/navigation_mail"
        android:name="com.example.musicalapp.ui.notifications.NotificationsFragment"
        android:label="@string/title_mail"
        tools:layout="@layout/fragment_notifications" />
</navigation>
